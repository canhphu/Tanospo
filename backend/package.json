{
  "name": "tanospo-backend",
  "version": "0.1.0",
  "description": "Tanospo backend template using Node.js, Express, PostgreSQL, and Repository Pattern.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "migrate": "ts-node ./scripts/runMigrations.ts",
    "setup:env": "ts-node ./scripts/setupEnv.ts"
  },
  "keywords": [
    "tanospo",
    "express",
    "postgres",
    "clean-architecture",
    "repository-pattern"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsyringe": "^4.8.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.19.1",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.9.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.2"
  }
}
